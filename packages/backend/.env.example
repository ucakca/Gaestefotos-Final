# Server Configuration
PORT=8001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/gaestefotos_v2

# JWT
JWT_SECRET=your-secret-key-change-this
JWT_EXPIRES_IN=7d

# SeaweedFS S3 API
SEAWEEDFS_ENDPOINT=localhost:8333
SEAWEEDFS_ACCESS_KEY=admin
SEAWEEDFS_SECRET_KEY=password
SEAWEEDFS_BUCKET=gaestefotos-v2
SEAWEEDFS_SECURE=false

# Redis (optional)
REDIS_URL=redis://localhost:6379

# App URL
APP_URL=http://localhost:3000

# Sentry Error Tracking (optional but recommended for production)
# Get your DSN from: https://sentry.io → Project Settings → Client Keys
# SENTRY_DSN=https://xxxxx@o123456.ingest.sentry.io/123456

# Tus.io Resumable Uploads
TUS_UPLOAD_DIR=/tmp/tus-uploads
TUS_MAX_SIZE=524288000

# ─── SMS Sharing (Twilio) ───────────────────────────────────────
# Required for SMS photo sharing feature
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+49123456789

# ─── Email / SMTP ───────────────────────────────────────────────
# Required for email photo sharing and notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password

# ─── Encryption ─────────────────────────────────────────────────
# Used for AI Provider API key encryption (AES-256-GCM)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
TWO_FACTOR_ENCRYPTION_KEY=your-64-char-hex-encryption-key

# ─── 2FA ─────────────────────────────────────────────────────────
ADMIN_2FA_REQUIRED=false

# ─── WordPress Integration ──────────────────────────────────────
# Required for WooCommerce package sync
WORDPRESS_URL=https://your-wordpress-site.com
WORDPRESS_DB_HOST=localhost
WORDPRESS_DB_PORT=3306
WORDPRESS_DB_NAME=wordpress
WORDPRESS_DB_USER=wp_user
WORDPRESS_DB_PASSWORD=wp_password
WORDPRESS_TABLE_PREFIX=wp_
WORDPRESS_VERIFY_SECRET=your-webhook-secret

# ─── Cloudflare (optional — for CDN/DNS management) ─────────────
# CLOUDFLARE_ZONE_ID=your-zone-id
# CLOUDFLARE_API_TOKEN=your-api-token

# ─── Cookie ─────────────────────────────────────────────────────
COOKIE_DOMAIN=localhost

# ─── Logging ────────────────────────────────────────────────────
LOG_TO_CONSOLE=true

# ─── Face Search Consent Retention ──────────────────────────────
FACE_SEARCH_DB_CONSENT_ENABLED=true
FACE_SEARCH_CONSENT_RETENTION_ENABLED=true
FACE_SEARCH_CONSENT_RETENTION_INTERVAL_MS=3600000
FACE_SEARCH_CONSENT_RETENTION_BATCH_SIZE=100
FACE_SEARCH_CONSENT_REVOKED_GRACE_DAYS=30

