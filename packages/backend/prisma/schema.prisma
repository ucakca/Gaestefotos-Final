  lockedAt      DateTime?
  lockedBy      String?
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
  events        Event[]
  backups       WorkflowBackup[]

  @@index([flowType])
  @@index([isSystem])
  @@index([parentId])
  @@map("booth_workflows")
}

